# Moon Reps - Variables de Entorno
# Copia este archivo como .env.local y configura tus credenciales

# Admin Authentication (OBLIGATORIO - sin esto no funciona el login)
ADMIN_USERNAME=tu_usuario_aqui
ADMIN_PASSWORD=tu_contraseña_aqui
ADMIN_NAME=Administrador

# Supabase Configuration (si usas Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudinary Configuration (si usas Cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_PUBLIC_URL_BASE=https://your-public-bucket.r2.dev

# Discord Bot Configuration (OPCIONAL - para notificaciones automáticas)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here
